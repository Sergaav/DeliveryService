<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Delivery Service</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- servlet  -->
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>com.savaz.delivery.controller.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

<!--    jsp-pages-->
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminMenu</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/adminMenu.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminMenu</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


    <!-- filters -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.savaz.delivery.controller.filters.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>Servlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.savaz.delivery.controller.filters.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <servlet-name>Servlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.savaz.delivery.controller.filters.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>adminMenu</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>userMenu</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logout noCommand price destination</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login registration</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Servlet</servlet-name>
    </filter-mapping>


    <listener>
        <listener-class>com.savaz.delivery.controller.listener.ContextListener</listener-class>
    </listener>


    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/common/errorPage.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/common/errorPage.jsp</location>
    </error-page>
</web-app>
